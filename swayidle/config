timeout 10 'light -s sysfs/leds/platform::kbd_backlight -O && light -s sysfs/leds/platform::kbd_backlight -S 0' resume 'light -s sysfs/leds/platform::kbd_backlight -I'
timeout 30 'light -O && light -T 0.1' resume 'light -I'
timeout 60 'hyprctl dispatch dpms off && swaylock' resume 'hyprctl dispatch dpms on' 
timeout 300 'systemctl suspend-then-hibernate'
before-sleep 'swaylock'
